import React from 'react';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { User, Mail, Phone, MapPin, Building2, CreditCard } from 'lucide-react';

export default function CooperadoDetalhes({ cooperado, cooperativa }) {
  const InfoRow = ({ label, value, icon: Icon }) => (
    <div className="flex items-start gap-3 py-3 border-b border-slate-100 last:border-0">
      {Icon && <Icon className="w-5 h-5 text-slate-400 mt-0.5" />}
      <div className="flex-1">
        <p className="text-sm text-slate-500">{label}</p>
        <p className="font-medium text-slate-800 mt-0.5">{value || 'Não informado'}</p>
      </div>
    </div>
  );

  return (
    <div className="space-y-6">
      <div className="flex items-center gap-4 pb-4 border-b">
        <div className="w-16 h-16 rounded-full bg-gradient-to-br from-[#4A9B8E] to-[#3A7B6E] flex items-center justify-center text-white text-2xl font-bold">
          {cooperado.nome_completo?.charAt(0)}
        </div>
        <div>
          <h2 className="text-2xl font-bold text-slate-800">{cooperado.nome_completo}</h2>
          <p className="text-slate-500">CPF: {cooperado.cpf}</p>
        </div>
        <Badge className="ml-auto" variant={cooperado.status === 'ativo' ? 'default' : 'secondary'}>
          {cooperado.status || 'ativo'}
        </Badge>
      </div>

      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card>
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <User className="w-5 h-5" />
              Dados Pessoais
            </CardTitle>
          </CardHeader>
          <CardContent>
            <InfoRow label="Nome Completo" value={cooperado.nome_completo} />
            <InfoRow label="Nome no Cartão" value={cooperado.nome_impresso_cartao} />
            <InfoRow label="RG" value={cooperado.rg} />
            <InfoRow label="Data de Nascimento" value={cooperado.data_nascimento} />
            <InfoRow label="Sexo" value={cooperado.sexo} />
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <Mail className="w-5 h-5" />
              Contato
            </CardTitle>
          </CardHeader>
          <CardContent>
            <InfoRow label="E-mail" value={cooperado.email} icon={Mail} />
            <InfoRow label="Celular" value={cooperado.celular} icon={Phone} />
            <InfoRow label="Telefone" value={cooperado.telefone} icon={Phone} />
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <MapPin className="w-5 h-5" />
              Endereço
            </CardTitle>
          </CardHeader>
          <CardContent>
            <InfoRow label="CEP" value={cooperado.cep} />
            <InfoRow label="Endereço" value={`${cooperado.endereco}, ${cooperado.numero}`} />
            <InfoRow label="Complemento" value={cooperado.complemento} />
            <InfoRow label="Bairro" value={cooperado.bairro} />
            <InfoRow label="Cidade/UF" value={`${cooperado.cidade} - ${cooperado.estado}`} />
          </CardContent>
        </Card>

        <Card>
          <CardHeader>
            <CardTitle className="text-lg flex items-center gap-2">
              <Building2 className="w-5 h-5" />
              Informações Bancárias
            </CardTitle>
          </CardHeader>
          <CardContent>
            <InfoRow label="Cooperativa" value={cooperativa?.nome} icon={Building2} />
            <InfoRow label="Conta Corrente" value={cooperado.conta_corrente} icon={CreditCard} />
            <InfoRow label="Status" value={cooperado.status || 'ativo'} />
          </CardContent>
        </Card>
      </div>
    </div>
  );
}