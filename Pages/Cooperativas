import React, { useState } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Badge } from '@/components/ui/badge';
import { Table, TableBody, TableCell, TableHead, TableHeader, TableRow } from '@/components/ui/table';
import { Search, Plus, Eye, Edit, Building2, TrendingUp, DollarSign } from 'lucide-react';
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogTrigger } from '@/components/ui/dialog';
import CooperativaForm from '../components/cooperativas/CooperativaForm';
import CooperativaDetalhes from '../components/cooperativas/CooperativaDetalhes';

export default function Cooperativas() {
  const [searchTerm, setSearchTerm] = useState('');
  const [selectedCooperativa, setSelectedCooperativa] = useState(null);
  const [isFormOpen, setIsFormOpen] = useState(false);
  const [isDetailsOpen, setIsDetailsOpen] = useState(false);
  const queryClient = useQueryClient();

  const { data: cooperativas = [], isLoading } = useQuery({
    queryKey: ['cooperativas'],
    queryFn: () => base44.entities.Cooperativa.list('-created_date')
  });

  const { data: centrais = [] } = useQuery({
    queryKey: ['centrais'],
    queryFn: () => base44.entities.Central.list()
  });

  const createMutation = useMutation({
    mutationFn: (data) => base44.entities.Cooperativa.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries(['cooperativas']);
      setIsFormOpen(false);
    }
  });

  const updateMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.Cooperativa.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries(['cooperativas']);
      setIsFormOpen(false);
      setSelectedCooperativa(null);
    }
  });

  const filteredCooperativas = cooperativas.filter(c => 
    c.nome?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    c.cnpj?.includes(searchTerm) ||
    c.codigo?.includes(searchTerm)
  );

  const totalLimiteOutorgado = cooperativas.reduce((sum, c) => sum + (c.limite_outorgado || 0), 0);
  const totalLimiteUtilizado = cooperativas.reduce((sum, c) => sum + (c.limite_utilizado || 0), 0);
  const percentualUtilizacao = totalLimiteOutorgado > 0 
    ? ((totalLimiteUtilizado / totalLimiteOutorgado) * 100).toFixed(1)
    : 0;

  return (
    <div className="space-y-6">
      <div className="grid grid-cols-1 md:grid-cols-4 gap-6">
        <Card className="border-t-4 border-t-[#4A9B8E]">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Total Cooperativas</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-3xl font-bold text-slate-800">{cooperativas.length}</span>
              <div className="p-3 rounded-xl bg-[#4A9B8E]/10">
                <Building2 className="w-6 h-6 text-[#4A9B8E]" />
              </div>
            </div>
          </CardContent>
        </Card>

        <Card className="border-t-4 border-t-blue-500">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Limite Outorgado</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-2xl font-bold text-slate-800">
                R$ {(totalLimiteOutorgado / 1000000).toFixed(1)}M
              </span>
              <div className="p-3 rounded-xl bg-blue-50">
                <DollarSign className="w-6 h-6 text-blue-600" />
              </div>
            </div>
          </CardContent>
        </Card>

        <Card className="border-t-4 border-t-orange-500">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Limite Utilizado</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-2xl font-bold text-slate-800">
                R$ {(totalLimiteUtilizado / 1000000).toFixed(1)}M
              </span>
              <div className="p-3 rounded-xl bg-orange-50">
                <TrendingUp className="w-6 h-6 text-orange-600" />
              </div>
            </div>
          </CardContent>
        </Card>

        <Card className="border-t-4 border-t-purple-500">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">% Utilização</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-3xl font-bold text-slate-800">{percentualUtilizacao}%</span>
              <div className="p-3 rounded-xl bg-purple-50">
                <TrendingUp className="w-6 h-6 text-purple-600" />
              </div>
            </div>
          </CardContent>
        </Card>
      </div>

      <Card className="border-t-4 border-t-[#4A9B8E]">
        <CardHeader>
          <div className="flex items-center justify-between">
            <div>
              <CardTitle className="text-2xl">Cooperativas</CardTitle>
              <p className="text-sm text-slate-500 mt-1">Gestão de cooperativas e limites</p>
            </div>
            <Dialog open={isFormOpen} onOpenChange={setIsFormOpen}>
              <DialogTrigger asChild>
                <Button className="bg-[#4A9B8E] hover:bg-[#3A7B6E]" onClick={() => setSelectedCooperativa(null)}>
                  <Plus className="w-4 h-4 mr-2" />
                  Nova Cooperativa
                </Button>
              </DialogTrigger>
              <DialogContent className="max-w-3xl max-h-[90vh] overflow-y-auto">
                <DialogHeader>
                  <DialogTitle>{selectedCooperativa ? 'Editar Cooperativa' : 'Nova Cooperativa'}</DialogTitle>
                </DialogHeader>
                <CooperativaForm
                  cooperativa={selectedCooperativa}
                  centrais={centrais}
                  onSubmit={(data) => {
                    if (selectedCooperativa) {
                      updateMutation.mutate({ id: selectedCooperativa.id, data });
                    } else {
                      createMutation.mutate(data);
                    }
                  }}
                  onCancel={() => {
                    setIsFormOpen(false);
                    setSelectedCooperativa(null);
                  }}
                />
              </DialogContent>
            </Dialog>
          </div>
        </CardHeader>
        <CardContent>
          <div className="mb-6">
            <div className="relative">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400 w-5 h-5" />
              <Input
                placeholder="Buscar por nome, código ou CNPJ..."
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                className="pl-10"
              />
            </div>
          </div>

          <div className="rounded-lg border border-slate-200 overflow-hidden">
            <Table>
              <TableHeader>
                <TableRow className="bg-slate-50">
                  <TableHead>Código</TableHead>
                  <TableHead>Nome</TableHead>
                  <TableHead>CNPJ</TableHead>
                  <TableHead>Tipo</TableHead>
                  <TableHead>Limite Outorgado</TableHead>
                  <TableHead>Limite Utilizado</TableHead>
                  <TableHead>% Uso</TableHead>
                  <TableHead>Status</TableHead>
                  <TableHead className="text-right">Ações</TableHead>
                </TableRow>
              </TableHeader>
              <TableBody>
                {isLoading ? (
                  <TableRow>
                    <TableCell colSpan={9} className="text-center py-8 text-slate-500">
                      Carregando...
                    </TableCell>
                  </TableRow>
                ) : filteredCooperativas.length === 0 ? (
                  <TableRow>
                    <TableCell colSpan={9} className="text-center py-8 text-slate-500">
                      Nenhuma cooperativa encontrada
                    </TableCell>
                  </TableRow>
                ) : (
                  filteredCooperativas.map((cooperativa) => {
                    const percentual = cooperativa.limite_outorgado > 0
                      ? ((cooperativa.limite_utilizado / cooperativa.limite_outorgado) * 100).toFixed(1)
                      : 0;
                    
                    return (
                      <TableRow key={cooperativa.id} className="hover:bg-slate-50">
                        <TableCell className="font-mono font-medium">{cooperativa.codigo}</TableCell>
                        <TableCell className="font-medium">{cooperativa.nome}</TableCell>
                        <TableCell className="font-mono text-sm">{cooperativa.cnpj}</TableCell>
                        <TableCell>
                          <Badge variant="outline" className="capitalize">
                            {cooperativa.tipo}
                          </Badge>
                        </TableCell>
                        <TableCell className="font-semibold">
                          R$ {((cooperativa.limite_outorgado || 0) / 1000000).toFixed(2)}M
                        </TableCell>
                        <TableCell className="font-semibold text-orange-600">
                          R$ {((cooperativa.limite_utilizado || 0) / 1000000).toFixed(2)}M
                        </TableCell>
                        <TableCell>
                          <div className="flex items-center gap-2">
                            <div className="flex-1 h-2 bg-slate-100 rounded-full overflow-hidden max-w-[60px]">
                              <div 
                                className={`h-full ${percentual > 80 ? 'bg-red-500' : percentual > 60 ? 'bg-orange-500' : 'bg-emerald-500'}`}
                                style={{ width: `${Math.min(percentual, 100)}%` }}
                              />
                            </div>
                            <span className="text-sm font-medium">{percentual}%</span>
                          </div>
                        </TableCell>
                        <TableCell>
                          <Badge variant={cooperativa.ativo ? 'default' : 'secondary'} className={cooperativa.ativo ? 'bg-emerald-600' : ''}>
                            {cooperativa.ativo ? 'Ativa' : 'Inativa'}
                          </Badge>
                        </TableCell>
                        <TableCell className="text-right">
                          <div className="flex items-center justify-end gap-2">
                            <Button
                              variant="ghost"
                              size="sm"
                              onClick={() => {
                                setSelectedCooperativa(cooperativa);
                                setIsDetailsOpen(true);
                              }}
                            >
                              <Eye className="w-4 h-4" />
                            </Button>
                            <Button
                              variant="ghost"
                              size="sm"
                              onClick={() => {
                                setSelectedCooperativa(cooperativa);
                                setIsFormOpen(true);
                              }}
                            >
                              <Edit className="w-4 h-4" />
                            </Button>
                          </div>
                        </TableCell>
                      </TableRow>
                    );
                  })
                )}
              </TableBody>
            </Table>
          </div>
        </CardContent>
      </Card>

      <Dialog open={isDetailsOpen} onOpenChange={setIsDetailsOpen}>
        <DialogContent className="max-w-3xl max-h-[90vh] overflow-y-auto">
          <DialogHeader>
            <DialogTitle>Detalhes da Cooperativa</DialogTitle>
          </DialogHeader>
          {selectedCooperativa && <CooperativaDetalhes cooperativa={selectedCooperativa} />}
        </DialogContent>
      </Dialog>
    </div>
  );
}