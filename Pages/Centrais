import React, { useState } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Badge } from '@/components/ui/badge';
import { Table, TableBody, TableCell, TableHead, TableHeader, TableRow } from '@/components/ui/table';
import { Search, Plus, Eye, Edit, Building2 } from 'lucide-react';
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogTrigger } from '@/components/ui/dialog';
import CentralForm from '../components/centrais/CentralForm';
import CentralDetalhes from '../components/centrais/CentralDetalhes';

export default function Centrais() {
  const [searchTerm, setSearchTerm] = useState('');
  const [selectedCentral, setSelectedCentral] = useState(null);
  const [isFormOpen, setIsFormOpen] = useState(false);
  const [isDetailsOpen, setIsDetailsOpen] = useState(false);
  const queryClient = useQueryClient();

  const { data: centrais = [], isLoading } = useQuery({
    queryKey: ['centrais'],
    queryFn: () => base44.entities.Central.list('-created_date')
  });

  const createMutation = useMutation({
    mutationFn: (data) => base44.entities.Central.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries(['centrais']);
      setIsFormOpen(false);
    }
  });

  const updateMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.Central.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries(['centrais']);
      setIsFormOpen(false);
      setSelectedCentral(null);
    }
  });

  const filteredCentrais = centrais.filter(c =>
    c.nome?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    c.cnpj?.includes(searchTerm) ||
    c.codigo?.includes(searchTerm)
  );

  return (
    <div className="space-y-6">
      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
        <Card className="border-t-4 border-t-[#4A9B8E]">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Total de Centrais</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-3xl font-bold text-slate-800">{centrais.length}</span>
              <div className="p-3 rounded-xl bg-[#4A9B8E]/10">
                <Building2 className="w-6 h-6 text-[#4A9B8E]" />
              </div>
            </div>
          </CardContent>
        </Card>

        <Card className="border-t-4 border-t-emerald-500">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Centrais Ativas</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-3xl font-bold text-slate-800">
                {centrais.filter(c => c.ativo).length}
              </span>
              <div className="p-3 rounded-xl bg-emerald-50">
                <Building2 className="w-6 h-6 text-emerald-600" />
              </div>
            </div>
          </CardContent>
        </Card>
      </div>

      <Card className="border-t-4 border-t-[#4A9B8E]">
        <CardHeader>
          <div className="flex items-center justify-between">
            <div>
              <CardTitle className="text-2xl">Centrais</CardTitle>
              <p className="text-sm text-slate-500 mt-1">Gestão de centrais cooperativas</p>
            </div>
            <Dialog open={isFormOpen} onOpenChange={setIsFormOpen}>
              <DialogTrigger asChild>
                <Button className="bg-[#4A9B8E] hover:bg-[#3A7B6E]" onClick={() => setSelectedCentral(null)}>
                  <Plus className="w-4 h-4 mr-2" />
                  Nova Central
                </Button>
              </DialogTrigger>
              <DialogContent className="max-w-3xl max-h-[90vh] overflow-y-auto">
                <DialogHeader>
                  <DialogTitle>{selectedCentral ? 'Editar Central' : 'Nova Central'}</DialogTitle>
                </DialogHeader>
                <CentralForm
                  central={selectedCentral}
                  onSubmit={(data) => {
                    if (selectedCentral) {
                      updateMutation.mutate({ id: selectedCentral.id, data });
                    } else {
                      createMutation.mutate(data);
                    }
                  }}
                  onCancel={() => {
                    setIsFormOpen(false);
                    setSelectedCentral(null);
                  }}
                />
              </DialogContent>
            </Dialog>
          </div>
        </CardHeader>
        <CardContent>
          <div className="mb-6">
            <div className="relative">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400 w-5 h-5" />
              <Input
                placeholder="Buscar por nome, código ou CNPJ..."
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                className="pl-10"
              />
            </div>
          </div>

          <div className="rounded-lg border border-slate-200 overflow-hidden">
            <Table>
              <TableHeader>
                <TableRow className="bg-slate-50">
                  <TableHead>Código</TableHead>
                  <TableHead>Nome</TableHead>
                  <TableHead>CNPJ</TableHead>
                  <TableHead>Cidade/UF</TableHead>
                  <TableHead>Telefone</TableHead>
                  <TableHead>Status</TableHead>
                  <TableHead className="text-right">Ações</TableHead>
                </TableRow>
              </TableHeader>
              <TableBody>
                {isLoading ? (
                  <TableRow>
                    <TableCell colSpan={7} className="text-center py-8 text-slate-500">
                      Carregando...
                    </TableCell>
                  </TableRow>
                ) : filteredCentrais.length === 0 ? (
                  <TableRow>
                    <TableCell colSpan={7} className="text-center py-8 text-slate-500">
                      Nenhuma central encontrada
                    </TableCell>
                  </TableRow>
                ) : (
                  filteredCentrais.map((central) => (
                    <TableRow key={central.id} className="hover:bg-slate-50">
                      <TableCell className="font-mono font-medium">{central.codigo}</TableCell>
                      <TableCell className="font-medium">{central.nome}</TableCell>
                      <TableCell className="font-mono text-sm">{central.cnpj}</TableCell>
                      <TableCell className="text-sm">{central.cidade} - {central.estado}</TableCell>
                      <TableCell className="text-sm">{central.telefone}</TableCell>
                      <TableCell>
                        <Badge variant={central.ativo ? 'default' : 'secondary'} className={central.ativo ? 'bg-emerald-600' : ''}>
                          {central.ativo ? 'Ativa' : 'Inativa'}
                        </Badge>
                      </TableCell>
                      <TableCell className="text-right">
                        <div className="flex items-center justify-end gap-2">
                          <Button
                            variant="ghost"
                            size="sm"
                            onClick={() => {
                              setSelectedCentral(central);
                              setIsDetailsOpen(true);
                            }}
                          >
                            <Eye className="w-4 h-4" />
                          </Button>
                          <Button
                            variant="ghost"
                            size="sm"
                            onClick={() => {
                              setSelectedCentral(central);
                              setIsFormOpen(true);
                            }}
                          >
                            <Edit className="w-4 h-4" />
                          </Button>
                        </div>
                      </TableCell>
                    </TableRow>
                  ))
                )}
              </TableBody>
            </Table>
          </div>
        </CardContent>
      </Card>

      <Dialog open={isDetailsOpen} onOpenChange={setIsDetailsOpen}>
        <DialogContent className="max-w-3xl max-h-[90vh] overflow-y-auto">
          <DialogHeader>
            <DialogTitle>Detalhes da Central</DialogTitle>
          </DialogHeader>
          {selectedCentral && <CentralDetalhes central={selectedCentral} />}
        </DialogContent>
      </Dialog>
    </div>
  );
}
