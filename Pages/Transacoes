import React, { useState } from 'react';
import { useQuery } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Badge } from '@/components/ui/badge';
import { Table, TableBody, TableCell, TableHead, TableHeader, TableRow } from '@/components/ui/table';
import { Search, Download, Filter, CreditCard, ShoppingBag, Banknote, TrendingDown, CheckCircle, XCircle, Clock } from 'lucide-react';
import { Select, SelectContent, SelectItem, SelectTrigger, SelectValue } from '@/components/ui/select';
import { format } from 'date-fns';

export default function Transacoes() {
  const [searchTerm, setSearchTerm] = useState('');
  const [tipoFilter, setTipoFilter] = useState('all');
  const [statusFilter, setStatusFilter] = useState('all');

  const { data: transacoes = [], isLoading } = useQuery({
    queryKey: ['transacoes'],
    queryFn: () => base44.entities.Transacao.list('-data_hora')
  });

  const { data: cooperados = [] } = useQuery({
    queryKey: ['cooperados'],
    queryFn: () => base44.entities.Cooperado.list()
  });

  const { data: cartoes = [] } = useQuery({
    queryKey: ['cartoes'],
    queryFn: () => base44.entities.Cartao.list()
  });

  const getCooperado = (cooperadoId) => cooperados.find(c => c.id === cooperadoId);
  const getCartao = (cartaoId) => cartoes.find(c => c.id === cartaoId);

  const filteredTransacoes = transacoes.filter(t => {
    const cooperado = getCooperado(t.cooperado_id);
    const matchesSearch = 
      cooperado?.nome_completo?.toLowerCase().includes(searchTerm.toLowerCase()) ||
      t.estabelecimento?.toLowerCase().includes(searchTerm.toLowerCase()) ||
      t.descricao?.toLowerCase().includes(searchTerm.toLowerCase());
    
    const matchesTipo = tipoFilter === 'all' || t.tipo_transacao === tipoFilter;
    const matchesStatus = statusFilter === 'all' || t.status === statusFilter;
    
    return matchesSearch && matchesTipo && matchesStatus;
  });

  const totalTransacoes = transacoes.length;
  const totalAprovadas = transacoes.filter(t => t.status === 'aprovada').length;
  const totalNegadas = transacoes.filter(t => t.status?.includes('negada')).length;
  const totalValor = transacoes
    .filter(t => t.status === 'aprovada')
    .reduce((sum, t) => sum + (t.valor || 0), 0);

  const statusIcons = {
    aprovada: CheckCircle,
    pendente: Clock,
    negada_saldo: XCircle,
    negada_limite: XCircle,
    cancelada: XCircle,
    estornada: TrendingDown,
    erro: XCircle
  };

  const statusColors = {
    aprovada: 'bg-emerald-100 text-emerald-700 border-emerald-200',
    pendente: 'bg-yellow-100 text-yellow-700 border-yellow-200',
    negada_saldo: 'bg-red-100 text-red-700 border-red-200',
    negada_limite: 'bg-red-100 text-red-700 border-red-200',
    cancelada: 'bg-slate-100 text-slate-700 border-slate-200',
    estornada: 'bg-orange-100 text-orange-700 border-orange-200',
    erro: 'bg-red-100 text-red-700 border-red-200'
  };

  const tipoIcons = {
    compra: ShoppingBag,
    saque: Banknote,
    pagamento: CheckCircle,
    ajuste: Filter,
    estorno: TrendingDown,
    taxa: CreditCard,
    juros: TrendingDown
  };

  const exportToCSV = () => {
    const headers = ['Data', 'Cooperado', 'Tipo', 'Estabelecimento', 'Valor', 'Status', 'Forma Pagamento'];
    const rows = filteredTransacoes.map(t => {
      const cooperado = getCooperado(t.cooperado_id);
      return [
        t.data_hora ? format(new Date(t.data_hora), 'dd/MM/yyyy HH:mm') : '',
        cooperado?.nome_completo || '',
        t.tipo_transacao || '',
        t.estabelecimento || '',
        t.valor?.toFixed(2) || '',
        t.status || '',
        t.forma_pagamento || ''
      ].join(',');
    });
    
    const csv = [headers.join(','), ...rows].join('\n');
    const blob = new Blob([csv], { type: 'text/csv' });
    const url = window.URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = `transacoes_${format(new Date(), 'yyyy-MM-dd')}.csv`;
    a.click();
  };

  return (
    <div className="space-y-6">
      <div className="grid grid-cols-1 md:grid-cols-4 gap-6">
        <Card className="border-t-4 border-t-[#4A9B8E]">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Total Transações</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-3xl font-bold text-slate-800">{totalTransacoes}</span>
              <div className="p-3 rounded-xl bg-[#4A9B8E]/10">
                <CreditCard className="w-6 h-6 text-[#4A9B8E]" />
              </div>
            </div>
          </CardContent>
        </Card>

        <Card className="border-t-4 border-t-emerald-500">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Aprovadas</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-3xl font-bold text-slate-800">{totalAprovadas}</span>
              <div className="p-3 rounded-xl bg-emerald-50">
                <CheckCircle className="w-6 h-6 text-emerald-600" />
              </div>
            </div>
          </CardContent>
        </Card>

        <Card className="border-t-4 border-t-red-500">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Negadas</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-3xl font-bold text-slate-800">{totalNegadas}</span>
              <div className="p-3 rounded-xl bg-red-50">
                <XCircle className="w-6 h-6 text-red-600" />
              </div>
            </div>
          </CardContent>
        </Card>

        <Card className="border-t-4 border-t-blue-500">
          <CardHeader className="pb-3">
            <CardTitle className="text-sm font-medium text-slate-600">Volume Total</CardTitle>
          </CardHeader>
          <CardContent>
            <div className="flex items-center justify-between">
              <span className="text-2xl font-bold text-slate-800">
                R$ {(totalValor / 1000).toFixed(0)}K
              </span>
              <div className="p-3 rounded-xl bg-blue-50">
                <TrendingDown className="w-6 h-6 text-blue-600" />
              </div>
            </div>
          </CardContent>
        </Card>
      </div>

      <Card className="border-t-4 border-t-[#4A9B8E]">
        <CardHeader>
          <div className="flex items-center justify-between">
            <div>
              <CardTitle className="text-2xl">Transações</CardTitle>
              <p className="text-sm text-slate-500 mt-1">Histórico completo de transações</p>
            </div>
            <Button onClick={exportToCSV} variant="outline" className="gap-2">
              <Download className="w-4 h-4" />
              Exportar CSV
            </Button>
          </div>
        </CardHeader>
        <CardContent>
          <div className="space-y-4">
            <div className="flex gap-4">
              <div className="relative flex-1">
                <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400 w-5 h-5" />
                <Input
                  placeholder="Buscar por cooperado, estabelecimento..."
                  value={searchTerm}
                  onChange={(e) => setSearchTerm(e.target.value)}
                  className="pl-10"
                />
              </div>
              <Select value={tipoFilter} onValueChange={setTipoFilter}>
                <SelectTrigger className="w-48">
                  <SelectValue placeholder="Tipo" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="all">Todos os tipos</SelectItem>
                  <SelectItem value="compra">Compra</SelectItem>
                  <SelectItem value="saque">Saque</SelectItem>
                  <SelectItem value="pagamento">Pagamento</SelectItem>
                  <SelectItem value="estorno">Estorno</SelectItem>
                </SelectContent>
              </Select>
              <Select value={statusFilter} onValueChange={setStatusFilter}>
                <SelectTrigger className="w-48">
                  <SelectValue placeholder="Status" />
                </SelectTrigger>
                <SelectContent>
                  <SelectItem value="all">Todos os status</SelectItem>
                  <SelectItem value="aprovada">Aprovada</SelectItem>
                  <SelectItem value="pendente">Pendente</SelectItem>
                  <SelectItem value="negada_saldo">Negada</SelectItem>
                  <SelectItem value="cancelada">Cancelada</SelectItem>
                </SelectContent>
              </Select>
            </div>

            <div className="rounded-lg border border-slate-200 overflow-hidden">
              <Table>
                <TableHeader>
                  <TableRow className="bg-slate-50">
                    <TableHead>Data/Hora</TableHead>
                    <TableHead>Cooperado</TableHead>
                    <TableHead>Tipo</TableHead>
                    <TableHead>Estabelecimento</TableHead>
                    <TableHead>Forma</TableHead>
                    <TableHead>Valor</TableHead>
                    <TableHead>Status</TableHead>
                    <TableHead>NSU</TableHead>
                  </TableRow>
                </TableHeader>
                <TableBody>
                  {isLoading ? (
                    <TableRow>
                      <TableCell colSpan={8} className="text-center py-8 text-slate-500">
                        Carregando...
                      </TableCell>
                    </TableRow>
                  ) : filteredTransacoes.length === 0 ? (
                    <TableRow>
                      <TableCell colSpan={8} className="text-center py-8 text-slate-500">
                        Nenhuma transação encontrada
                      </TableCell>
                    </TableRow>
                  ) : (
                    filteredTransacoes.map((transacao) => {
                      const cooperado = getCooperado(transacao.cooperado_id);
                      const TipoIcon = tipoIcons[transacao.tipo_transacao] || CreditCard;
                      const StatusIcon = statusIcons[transacao.status] || Clock;
                      
                      return (
                        <TableRow key={transacao.id} className="hover:bg-slate-50">
                          <TableCell className="text-sm">
                            {transacao.data_hora ? format(new Date(transacao.data_hora), 'dd/MM/yyyy HH:mm') : 'N/A'}
                          </TableCell>
                          <TableCell className="font-medium">
                            {cooperado?.nome_completo || 'N/A'}
                          </TableCell>
                          <TableCell>
                            <div className="flex items-center gap-2">
                              <TipoIcon className="w-4 h-4 text-slate-500" />
                              <span className="text-sm capitalize">{transacao.tipo_transacao}</span>
                            </div>
                          </TableCell>
                          <TableCell className="text-sm">
                            {transacao.estabelecimento || transacao.descricao || 'N/A'}
                          </TableCell>
                          <TableCell>
                            <Badge variant="outline" className="text-xs">
                              {transacao.forma_pagamento || 'N/A'}
                            </Badge>
                          </TableCell>
                          <TableCell className="font-semibold">
                            R$ {transacao.valor?.toLocaleString('pt-BR', { minimumFractionDigits: 2 })}
                          </TableCell>
                          <TableCell>
                            <Badge variant="secondary" className={`${statusColors[transacao.status]} border gap-1`}>
                              <StatusIcon className="w-3 h-3" />
                              {transacao.status}
                            </Badge>
                          </TableCell>
                          <TableCell className="font-mono text-xs text-slate-500">
                            {transacao.nsu || '-'}
                          </TableCell>
                        </TableRow>
                      );
                    })
                  )}
                </TableBody>
              </Table>
            </div>
          </div>
        </CardContent>
      </Card>
    </div>
  );
}