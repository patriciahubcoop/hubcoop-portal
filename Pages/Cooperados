import React, { useState } from 'react';
import { useQuery, useMutation, useQueryClient } from '@tanstack/react-query';
import { base44 } from '@/api/base44Client';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Button } from '@/components/ui/button';
import { Input } from '@/components/ui/input';
import { Badge } from '@/components/ui/badge';
import { Table, TableBody, TableCell, TableHead, TableHeader, TableRow } from '@/components/ui/table';
import { Search, Plus, Eye, Edit, UserCheck, UserX } from 'lucide-react';
import { Dialog, DialogContent, DialogHeader, DialogTitle, DialogTrigger } from '@/components/ui/dialog';
import CooperadoForm from '../components/cooperados/CooperadoForm';
import CooperadoDetalhes from '../components/cooperados/CooperadoDetalhes';

export default function Cooperados() {
  const [searchTerm, setSearchTerm] = useState('');
  const [selectedCooperado, setSelectedCooperado] = useState(null);
  const [isFormOpen, setIsFormOpen] = useState(false);
  const [isDetailsOpen, setIsDetailsOpen] = useState(false);
  const queryClient = useQueryClient();

  const { data: cooperados = [], isLoading } = useQuery({
    queryKey: ['cooperados'],
    queryFn: () => base44.entities.Cooperado.list('-created_date')
  });

  const { data: cooperativas = [] } = useQuery({
    queryKey: ['cooperativas'],
    queryFn: () => base44.entities.Cooperativa.list()
  });

  const createMutation = useMutation({
    mutationFn: (data) => base44.entities.Cooperado.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries(['cooperados']);
      setIsFormOpen(false);
    }
  });

  const updateMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.Cooperado.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries(['cooperados']);
      setIsFormOpen(false);
      setSelectedCooperado(null);
    }
  });

  const filteredCooperados = cooperados.filter(c => 
    c.nome_completo?.toLowerCase().includes(searchTerm.toLowerCase()) ||
    c.cpf?.includes(searchTerm) ||
    c.email?.toLowerCase().includes(searchTerm.toLowerCase())
  );

  const getCooperativaNome = (id) => {
    return cooperativas.find(c => c.id === id)?.nome || 'N/A';
  };

  const statusColors = {
    ativo: 'bg-emerald-100 text-emerald-700 border-emerald-200',
    inativo: 'bg-slate-100 text-slate-700 border-slate-200',
    bloqueado: 'bg-red-100 text-red-700 border-red-200',
    anulado: 'bg-orange-100 text-orange-700 border-orange-200'
  };

  return (
    <div className="space-y-6">
      <Card className="border-t-4 border-t-[#4A9B8E]">
        <CardHeader>
          <div className="flex items-center justify-between">
            <div>
              <CardTitle className="text-2xl">Gestão de Cooperados</CardTitle>
              <p className="text-sm text-slate-500 mt-1">Cadastro e gerenciamento de cooperados</p>
            </div>
            <Dialog open={isFormOpen} onOpenChange={setIsFormOpen}>
              <DialogTrigger asChild>
                <Button className="bg-[#4A9B8E] hover:bg-[#3A7B6E]" onClick={() => setSelectedCooperado(null)}>
                  <Plus className="w-4 h-4 mr-2" />
                  Novo Cooperado
                </Button>
              </DialogTrigger>
              <DialogContent className="max-w-3xl max-h-[90vh] overflow-y-auto">
                <DialogHeader>
                  <DialogTitle>{selectedCooperado ? 'Editar Cooperado' : 'Novo Cooperado'}</DialogTitle>
                </DialogHeader>
                <CooperadoForm
                  cooperado={selectedCooperado}
                  cooperativas={cooperativas}
                  onSubmit={(data) => {
                    if (selectedCooperado) {
                      updateMutation.mutate({ id: selectedCooperado.id, data });
                    } else {
                      createMutation.mutate(data);
                    }
                  }}
                  onCancel={() => {
                    setIsFormOpen(false);
                    setSelectedCooperado(null);
                  }}
                />
              </DialogContent>
            </Dialog>
          </div>
        </CardHeader>
        <CardContent>
          <div className="mb-6">
            <div className="relative">
              <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400 w-5 h-5" />
              <Input
                placeholder="Buscar por nome, CPF ou e-mail..."
                value={searchTerm}
                onChange={(e) => setSearchTerm(e.target.value)}
                className="pl-10"
              />
            </div>
          </div>

          <div className="rounded-lg border border-slate-200 overflow-hidden">
            <Table>
              <TableHeader>
                <TableRow className="bg-slate-50">
                  <TableHead>Nome</TableHead>
                  <TableHead>CPF</TableHead>
                  <TableHead>Cooperativa</TableHead>
                  <TableHead>E-mail</TableHead>
                  <TableHead>Telefone</TableHead>
                  <TableHead>Status</TableHead>
                  <TableHead className="text-right">Ações</TableHead>
                </TableRow>
              </TableHeader>
              <TableBody>
                {isLoading ? (
                  <TableRow>
                    <TableCell colSpan={7} className="text-center py-8 text-slate-500">
                      Carregando...
                    </TableCell>
                  </TableRow>
                ) : filteredCooperados.length === 0 ? (
                  <TableRow>
                    <TableCell colSpan={7} className="text-center py-8 text-slate-500">
                      Nenhum cooperado encontrado
                    </TableCell>
                  </TableRow>
                ) : (
                  filteredCooperados.map((cooperado) => (
                    <TableRow key={cooperado.id} className="hover:bg-slate-50">
                      <TableCell className="font-medium">{cooperado.nome_completo}</TableCell>
                      <TableCell className="font-mono text-sm">{cooperado.cpf}</TableCell>
                      <TableCell className="text-sm">{getCooperativaNome(cooperado.cooperativa_id)}</TableCell>
                      <TableCell className="text-sm">{cooperado.email}</TableCell>
                      <TableCell className="text-sm">{cooperado.celular || cooperado.telefone}</TableCell>
                      <TableCell>
                        <Badge variant="secondary" className={`${statusColors[cooperado.status || 'ativo']} border`}>
                          {cooperado.status === 'ativo' ? <UserCheck className="w-3 h-3 mr-1" /> : <UserX className="w-3 h-3 mr-1" />}
                          {cooperado.status || 'ativo'}
                        </Badge>
                      </TableCell>
                      <TableCell className="text-right">
                        <div className="flex items-center justify-end gap-2">
                          <Button
                            variant="ghost"
                            size="sm"
                            onClick={() => {
                              setSelectedCooperado(cooperado);
                              setIsDetailsOpen(true);
                            }}
                          >
                            <Eye className="w-4 h-4" />
                          </Button>
                          <Button
                            variant="ghost"
                            size="sm"
                            onClick={() => {
                              setSelectedCooperado(cooperado);
                              setIsFormOpen(true);
                            }}
                          >
                            <Edit className="w-4 h-4" />
                          </Button>
                        </div>
                      </TableCell>
                    </TableRow>
                  ))
                )}
              </TableBody>
            </Table>
          </div>
        </CardContent>
      </Card>

      <Dialog open={isDetailsOpen} onOpenChange={setIsDetailsOpen}>
        <DialogContent className="max-w-4xl max-h-[90vh] overflow-y-auto">
          <DialogHeader>
            <DialogTitle>Detalhes do Cooperado</DialogTitle>
          </DialogHeader>
          {selectedCooperado && (
            <CooperadoDetalhes
              cooperado={selectedCooperado}
              cooperativa={cooperativas.find(c => c.id === selectedCooperado.cooperativa_id)}
            />
          )}
        </DialogContent>
      </Dialog>
    </div>
  );
}